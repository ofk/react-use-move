    "prettier-package-json": "^2.7.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
