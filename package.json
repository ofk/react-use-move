    "prettier:lint": "prettier . --check"
  },
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "devDependencies": {
    "@ofk/eslint-config-recommend": "^5.3.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
